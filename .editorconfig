# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.xml]
indent_style = tab
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf
